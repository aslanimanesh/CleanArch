@model MyApp.Domain.ViewModels.AssignDiscount.AssignDiscountViewModel;

@{
    ViewData["Title"] = "Assign Discount to Products";
}

<h2>اختصاص تخفیف به محصولات</h2>

<form asp-action="AssignDiscount" method="post">
    <div class="form-group">
        <label asp-for="DiscountId" class="control-label"></label>
        <select asp-for="DiscountId" class="form-control" asp-items="ViewBag.Discounts">
            <option value="">انتخاب تخفیف</option> 
        </select>
        <span asp-validation-for="DiscountId" class="text-danger"></span> 
    </div>
    <div class="form-group">
        <label asp-for="ProductIds" class="control-label"></label>
        <select asp-for="ProductIds" class="form-control" multiple asp-items="ViewBag.Product">
            @foreach (var product in ViewBag.Products)
            {
                <option value="@product.Value">@product.Text</option>
            }
        </select>

        <span asp-validation-for="ProductIds" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">اختصاص</button> 
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">انصراف</a> 
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    } 
}
