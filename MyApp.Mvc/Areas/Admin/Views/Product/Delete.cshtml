@model MyApp.Domain.Models.Product

@{
    ViewData["Title"] = "Delete Product"; // عنوان صفحه
}

<h2>حذف محصول</h2>

<div>
    <h4>آیا مطمئن هستید که می‌خواهید محصول زیر را حذف کنید؟</h4>
    <dl class="row">
        <dt class="col-sm-2">عنوان</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">شرح</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">قیمت</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">تصویر</dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.ImageName" alt="@Model.Title" style="width:200px;" />
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">حذف</button>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">انصراف</a>
</form>
