@model MyApp.Domain.Models.Product

@{
    ViewData["Title"] = "Delete Product"; 
}

<h2>حذف محصول</h2>

<div>
    <h4>Are you sure you want to delete this product?</h4>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.ImageName" alt="@Model.Title" style="width:200px;" />
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">delete</button>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">cancell</a>
</form>
