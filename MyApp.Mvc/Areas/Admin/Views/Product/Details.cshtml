@model MyApp.Domain.Models.Product

@{
    ViewData["Title"] = "Product Details"; 
}

<h2>جزئیات محصول</h2>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">شرح</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">قیمت</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">تصویر</dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.ImageName" alt="@Model.Title" style="width:200px;" />
        </dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">back to list</a>
