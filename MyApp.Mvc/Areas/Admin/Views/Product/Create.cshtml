@using MyApp.Domain.ViewModels.AssignDiscount
@model AssignDiscountToProductViewModel

@{
    ViewData["Title"] = "Assign Discount to Products"; 
}

<h2>اختصاص تخفیف به محصولات</h2>

<form asp-action="Create" method="post">
  
    <div class="form-group">
        <label asp-for="DiscountId" class="control-label"></label>
        <select asp-for="DiscountId" class="form-control" asp-items="ViewBag.Discounts"></select>
        <span asp-validation-for="DiscountId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductIds" class="control-label"></label>
        <select asp-for="ProductIds" class="form-control" multiple>
          
            @foreach (var product in ViewBag.Products) 
            {
                <option value="@product.Id">@product.Title</option> 
            }
        </select>
        <span asp-validation-for="ProductIds" class="text-danger"></span> 
    </div>

    <button type="submit" class="btn btn-primary">اختصاص</button> 
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">انصراف</a> 
</form>
