@model MyApp.Domain.ViewModels.Discounts.DiscountViewModel

@{
    ViewData["Title"] = "Discount Details";
}

<h2>Discount Details</h2>

<div>
    <h4>Discount</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Discount Code</dt>
        <dd class="col-sm-10">@Model.DiscountCode</dd>

        <dt class="col-sm-2">Discount Percentage</dt>
        <dd class="col-sm-10">@Model.DiscountPercentage %</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">
            @(Model.StartDate.HasValue ? Model.StartDate.Value.ToString("yyyy-MM-dd") : "تعریف نشده")
        </dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">
            @(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("yyyy-MM-dd") : "تعریف نشده")
        </dd>

        <dt class="col-sm-2">Is Active</dt>
        <dd class="col-sm-10">@(Model.IsActive ? "Yes" : "No")</dd>
    </dl>
</div>

<a href="@Url.Action("Edit", "Discount", new { id = Model.Id })" class="btn btn-warning">Edit</a>
<a href="@Url.Action("Index", "Discount")" class="btn btn-secondary">Back to List</a>
