@model MyApp.Domain.Models.Discount

@{
    ViewData["Title"] = "Delete Discount";
}

<h2>Delete Discount</h2>

<div>
    <h4>Are you sure you want to delete this discount?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Discount Code</dt>
        <dd class="col-sm-10">@Model.DiscountCode</dd>

        <dt class="col-sm-2">Discount Percentage</dt>
        <dd class="col-sm-10">@Model.DiscountPercentage %</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">
            @(Model.StartDate.HasValue ? Model.StartDate.Value.ToString("yyyy-MM-dd") : "تعریف نشده")
        </dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">
            @(Model.EndDate.HasValue ? Model.EndDate.Value.ToString("yyyy-MM-dd") : "تعریف نشده")
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Discount")" class="btn btn-secondary">Cancel</a>
</form>
